<ul>
    {{#each burgers}}
    <li>
        <p><span class="label">Burger Name:</span> {{this.burger_name}}</p>
        <button data-id="{{this.id}}" class="devourBurger">Devour!</button>
    </li>
    {{/each}}
</ul>

<h2>Create a burger!</h2>

<form class="create-form">
  <div class="form-group">
    <label for="burger">Quote:</label>
    <textarea id="burgerId" name="burger" rows="8" cols="40"></textarea>
  </div>
  <button type="submit">Add burger</button>
</form>