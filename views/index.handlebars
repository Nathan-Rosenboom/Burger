<h1 class="title">Eat-Da-Burger!</h1>
<div class="container">
    <div class="row">
        <div class="readyBurger col-md-6">
            <h2>Ready burgers:</h2>
            <ul class="readyList">
                {{#each burgers}}
                {{#unless devoured}}
                <li class="readyListItem">
                    {{burger_name}}
                    <button class="devourBurger btn btn-secondary" data-id="{{id}}" data-newDevour="{{devour}}">
                        {{#if devour}}Devour!{{else}}Devour!{{/if}}
                    </button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="devouredBurger col-md-6">
            <h2>Devoured burgers:</h2>
            <ul class="devouredList">
                {{#each burgers}}
                {{#if devoured}}
                <li class="devouredListItem">
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">

        </div>
        <div class="createBurger col-md-8">
            <h2>Create a burger!</h2>

            <form class="create-form">
                <div class="form-group">
                    <label for="burger">Burger:</label>
                    <textarea id="id" name="burger" rows="1" cols="50"></textarea>
                </div>
                <button class="btn btn-secondary" type="submit">Add burger</button>
            </form>
        </div>
        <div class="col-md-2">

        </div>
    </div>
</div>